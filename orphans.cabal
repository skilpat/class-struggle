  other-extensions:    OverloadedStrings,
                       RecordWildCards,
                       NoMonomorphismRestriction,
                       ExtendedDefaultRules,
                       ScopedTypeVariables,
                       DeriveDataTypeable,
                       ViewPatterns,
                       FlexibleInstances,
                       UndecidableInstances,
                       OverlappingInstances,
                       GeneralizedNewtypeDeriving,
                       StandaloneDeriving
