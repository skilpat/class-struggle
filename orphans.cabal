                       containers >=0.5 && <0.6,
                       ghc-paths >=0.1 && <0.2,
                       directory >=1.2 && <1.3,
                       filepath >=1.3 && <1.4,
                       socks >=0.5 && <0.6,
                       network >=2.6 && <2.7,
                       bytestring >=0.10 && <0.11,
                       ghc,
                       Cabal >= 1.16 && <1.22
