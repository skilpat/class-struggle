name:                orphans
version:             0.1.0.0
synopsis:            Calculates statistics about the usage of orphan instances in common packages.
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Scott Kilpatrick
maintainer:          skilpat@mpi-sws.org
-- copyright:           
category:            Research
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable orphans
  main-is:             Main.hs
